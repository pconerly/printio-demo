{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "Client-side app for converting requirejs bad syntax to the awesome alternate syntax.",
  "main": "src/app.cjsx",
  "dependencies": {
    "react": "~0.8",
    "underscore": "^1.6.0",
    "underscore.string": "^2.3.3"
  },
  "devDependencies": {
    "browserify": "~2.36.0",
    "envify": "~0.2.0",
    "reactify": "~0.4.0",
    "statics": "~0.1.0",
    "uglifyjs": "~2.3.6",
    "watchify": "~0.4.1",
    "coffee-reactify": "~0.5.1"
  },
  "scripts": {
    "start": "STATIC_ROOT=./static watchify -o build/app.js -v -d .",
    "build": "STATIC_ROOT=./static NODE_ENV=production browserify . | uglifyjs -cm > browser-bundle.min.js",
    "collect-static": "collect-static . ./static",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Peter Conerly",
  "license": "Apache 2",
  "browserify": {
    "transform": [
      "coffee-reactify",
      "envify"
    ]
  }
}
